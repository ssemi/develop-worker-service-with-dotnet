<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" throwExceptions="false">
  <variable name="logFolderName" value="c:\" />
  <variable name="appName" value="worker-log" />

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets async="true">
    <target xsi:type="File"
            name="logfile"
            layout="${longdate} - ${level:uppercase=true}: ${message}${onexception:${newline}EXCEPTION\: ${exception:format=ToString}}"
            fileName="${var:logFolderName}\${var:appName}\logfile.log"
            keepFileOpen="false"
            archiveFileName="${var:logFolderName}\${var:appName}\logfile_${shortdate}.{##}.log"
            archiveNumbering="Sequence"
            archiveEvery="Day"
            maxArchiveFiles="30" />

    <target xsi:type="Console"
            name="console"
            layout="${longdate} - ${level:uppercase=true}: ${message}${onexception:${newline}EXCEPTION\: ${exception:format=ToString}}" />
  </targets>
  <rules>
    <logger name="Microsoft.*" maxLevel="Info" final="true" />
    <logger name="*" writeTo="console" minlevel="Info" />
    <!-- <logger name="*" writeTo="logfile" minlevel="Info" /> -->

  </rules>
</nlog>
